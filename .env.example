# ===========================================
# PRShark Ecommerce Engine - Environment
# ===========================================

# App
NODE_ENV=development
PORT=5000
APP_URL=http://localhost:5000
ADMIN_URL=http://localhost:5173

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=prshark_ecommerce
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
LOGIN_RATE_LIMIT_MAX=5
BCRYPT_ROUNDS=12
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MIN=30

# Media Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif,application/pdf

# Payment Providers
# BOG
BOG_CLIENT_ID=
BOG_CLIENT_SECRET=
BOG_CALLBACK_URL=

# TBC
TBC_CLIENT_ID=
TBC_CLIENT_SECRET=
TBC_CALLBACK_URL=

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# SMTP (Email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@yourstore.com

# Store Defaults
DEFAULT_CURRENCY=GEL
DEFAULT_LANGUAGE=ka
