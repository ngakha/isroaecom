{
  "name": "prshark-ecommerce-template",
  "version": "1.0.0",
  "description": "PRShark Ecommerce Engine Template - Headless ecommerce platform",
  "private": true,
  "workspaces": ["server", "admin"],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:admin\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:admin": "npm run dev --workspace=admin",
    "build": "npm run build --workspace=admin",
    "migrate": "npm run migrate --workspace=server",
    "migrate:rollback": "npm run migrate:rollback --workspace=server",
    "seed": "npm run seed --workspace=server",
    "start": "npm run start --workspace=server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
